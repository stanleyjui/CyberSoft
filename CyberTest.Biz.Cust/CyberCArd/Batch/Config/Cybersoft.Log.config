<?xml version="1.0" encoding="utf-8" ?>
<log4net>

  <root>
    <level value="All"/>
    <appender-ref ref="ALL.debug.file"/>
    <appender-ref ref="ALL.info.file"/>
    <appender-ref ref="ALL.ConsoleAppender"/>
  </root>

  <appender name="ALL.debug.file" type="Cybersoft.Log.Appender.FileAppender">
    <param name="File" value="Log/Log-%yyyy%MM%dd/Debug/%D_debug.log" />
    <param name="AppendToFile" value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />

    <filter type="log4net.Filter.LevelRangeFilter, log4net">
      <acceptOnMatch value="true" />
      <levelMin value="Debug" />
      <levelMax value="Fatal" />
    </filter>

    <layout type="log4net.Layout.PatternLayout, log4net">
      <param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss.fff} %m  %C %l %exception %n" />
    </layout>
  </appender>

  <appender name="ALL.info.file" type="Cybersoft.Log.Appender.FileAppender">
    <param name="File" value="Log/Log-%yyyy%MM%dd/INF/%D_.log" />
    <param name="AppendToFile" value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />

    <filter type="log4net.Filter.LevelRangeFilter, log4net">
      <acceptOnMatch value="true" />
      <levelMin value="Debug" />
      <levelMax value="Fatal" />
    </filter>

    <layout type="log4net.Layout.PatternLayout, log4net">
      <param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss.fff} %m  %C %l %exception %n" />
    </layout>
  </appender>

  <appender name="ALL.ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout, log4net">
      <param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss.fff} %m  %C %l %exception %n" />
    </layout>
  </appender>
  
</log4net>

